<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_backgroundcolor"
    tools:context="com.example.felixemilioramosscalabrin.hubifit.MainActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, what's your name?"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namee"
        android:hint="Put your name"
        android:textColorHint="#ffffff"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"/>


 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Name avalible"
     android:textSize="20dp"
     android:textColor="#ffffff"
     android:layout_marginTop="310dp"
     android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/button1"
        android:layout_height="wrap_content"
        android:text="Let's get it started"
        android:background="@drawable/button_login"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:onClick="next"/>
</RelativeLayout>


</android.support.constraint.ConstraintLayout>
